{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"sourceMap": true,
		"module": "ES2020",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["./src/@shared/*"],
			"@modules/*": ["./src/@modules/*"]
		}
	}
}
